import random
number_to_guess = random.randint(1, 1000)
guesses = 0
while True:
    if guesses == 10:
        print(f"Alas!! you lost the game. you cant guess in 10 attempts. the number is {number_to_guess}")
        break
    answer = int(input("guess the number between 1 to 1000:"))
    guesses += 1
    if answer == number_to_guess:
        print(f"congrats !! you guessed it right in {guesses} attempts")
        break
    elif answer > number_to_guess:
        print("too high, try again")
    elif answer < number_to_guess:
        print("too low, try again")
